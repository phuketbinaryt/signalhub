# Database
DATABASE_URL=postgresql://user:password@host:5432/database

# NextAuth Configuration
NEXTAUTH_URL=https://your-domain.com
NEXTAUTH_SECRET=your-random-secret-here-generate-with-openssl-rand-base64-32

# Google OAuth (Get from https://console.cloud.google.com)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Webhook Security
WEBHOOK_SECRET=your-shared-secret-with-tradingview

# Discord Webhook (Optional - leave empty to disable)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your-webhook-url

# Telegram Bot (Optional - leave empty to disable)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# External Dashboard Webhook (Optional - leave empty to disable)
EXTERNAL_DASHBOARD_URL=https://example.com/webhook
